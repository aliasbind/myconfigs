imap jj <Esc>
noremap j 5j
noremap k 5k
set hintchars=hjklasdfgyuiopqwertnmzxcvb
set nohlsearch
source! /home/andrei/.vimperatorrc.local

" Normal Mode Mappings
nnoremap <C-f> :js enable_bottombar()<CR>/
nnoremap / :js enable_bottombar()<CR>/
nnoremap <C-w> :tabclose<CR>
nnoremap <C-c> <Ins><C-c><Ins>
nnoremap <C-v> <Ins><C-v><Ins>
nnoremap <C-t> <Ins><C-t><Ins>
nnoremap <C-S-p> :winopen -private<CR>
nnoremap ` :js toggle_bottombar()<CR>

" Insert Mode Mappings
inoremap <C-w> <Esc>:tabclose<CR>
inoremap <C-a> <Ins><C-a><Ins>
inoremap <C-c> <Ins><C-c><Ins>
inoremap <C-v> <Ins><C-v><Ins>
inoremap <C-t> <Ins><C-t><Ins>
inoremap <C-S-p> <Esc>:winopen -private<CR>

:js << EOF
function toggle_bottombar() {
    var bb = document.getElementById('liberator-bottombar');
    if (!bb)
        return;
    bb.style.height = (bb.style.height == '') ? '0px' : '';
    bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}

function enable_bottombar() {
    var bb = document.getElementById('liberator-bottombar');
    if (!bb)
        return;
    bb.style.height = '0px'
    bb.style.overflow = ''
}

function disable_bottombar() {
    var bb = document.getElementById('liberator-bottombar');
    if (!bb)
        return;
    bb.style.height = ''
    bb.style.overflow = 'hidden'
}

toggle_bottombar()
EOF

" vim: set ft=vimperator:
